<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:H5_GenericDataLogger.Controls"
	x:Class="H5_GenericDataLogger.MainPage">
	<NavigationPage.HasNavigationBar>False</NavigationPage.HasNavigationBar>
	<ScrollView>
		<VerticalStackLayout>
			<ImageButton
				x:Name="NewLogButton"
				Source="plus.png"
				HeightRequest="{StaticResource SizeXXL}"
				WidthRequest="{StaticResource SizeXXL}"
				BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray20}}" />

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
